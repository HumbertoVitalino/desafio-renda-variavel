{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 7,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "InvestimentosRV.Api"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=investimentos_rv_db;Uid=root;Pwd=!1234567;"
  },
  "Jwt": {
    "Secret": "e8b4f72f1c3a8e6d9a0b7c4d5f2e1a6b",
    "ExpirationMinutes": "60"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topic": "cotacoes-topic",
    "GroupId": "cotacao_consumer_group_main"
  },
  "Polly": {
    "RetryCount": 3,
    "RetryDelaySeconds": 5
  }
}